<div id="content" class="container dashboard">

	<% if (user.usertype === "Company") { %>
		<h1>Opportunities <% if (results.opportunities != "") { %><small><a class="btn btn-primary btn-xs" href="/opportunities/new"><strong>New Opportunity</strong> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></small><% } %></h1>
		<% if (results.opportunities != "") {
			results.opportunities.forEach(function(opportunity) { %>
		    <div class="item thumbnail">
			    <div class="row">
					<div class="col-md-2">
						<a href="/opportunities/<%= opportunity._id %>"><% if (user.photo) { %><img src="<%= user.photo+'?dim=600x600' %>" class="img-responsive"><%} else {%><img src="/assets/images/kk-cover.png?dim=600x600" class="img-responsive" /><% } %></a>
					</div>
					<div class="col-md-10">
						<h4><a href="/opportunities/<%= opportunity._id %>"><%= opportunity.title %></a></h4>
						<!--<p><%- opportunity.description %></p>-->
						<ul class="list-unstyled list-inline">
							<!--<li><strong>Reward</strong> <%= opportunity.reward %></li>-->
							<li><strong>Status</strong> <%= opportunity.status %></li>
							<li><strong>Applications</strong> <%= opportunity.applications.length %></li>
							<li><strong>Added</strong> <%= moment(opportunity.createDate).fromNow() %></li>

						</ul>
						<p><a class="btn btn-primary btn-sm" href="/opportunities/edit/<%= opportunity._id %>"><strong>Edit</strong></a> <% if (opportunity.applications.length > 0) { %><a class="btn btn-primary btn-sm" href="/opportunities/manage/<%= opportunity._id %>"><strong>Manage</strong></a><% } %></p>
					</div>
				</div>
			</div>
		<% }); } else { %>

				<div class="well well-lg tac"> <p>You have not posted any opportunities but you can start one now.</p> <p><a class="btn btn-primary btn-xs" href="/opportunities/new"><strong>New Opportunity</strong> <span class="glyphicon glyphicon-plus" aria-hidden="true"></span></a></p></div>

		<% } %>

