	<script src="/assets/javascript/formValidation.min.js" type="text/javascript"></script>
    <script src="/assets/javascript/bootstrap.min.js" type="text/javascript"></script>
	<script type="text/javascript">
		var onAddressRemove = '';
		$(function(){

			$('#signup').formValidation({
		        framework: 'bootstrap',
		        icon: {
		            valid: 'glyphicon glyphicon-ok',
		            invalid: 'glyphicon glyphicon-remove',
		            validating: 'glyphicon glyphicon-refresh'
		        },
		        fields: {
		            firstname: {
		                validators: {
		                    notEmpty: {
		                        message: 'A first name is required'
		                    },
		                    stringLength: {
		                        min: 3,
		                        max: 100,
		                        message: 'The firstn name must be more than 10 and less than 100 characters long'
		                    }
		                }
		            },
		            lastname: {
		                validators: {
		                    notEmpty: {
		                        message: 'A last name is required'
		                    },
		                    stringLength: {
		                        min: 3,
		                        max: 100,
		                        message: 'The last name must be more than 10 and less than 100 characters long'
		                    }
		                }
		            },
		            email:{
			            validators: {
				            notEmpty: {
					            message:'An email address is required'
					        },
				            emailAddress: {
					            message:'This is not a valid email address'
					        }
					    }
					},
					password: {
	                    validators: {
	                        notEmpty: {
	                            message: 'The password is required and cannot be empty'
	                        }/*,
	                        regexp: {
		                        regexp: /^(?=[^\d_].*?\d)\w(\w|[!@#$%]){6,20}/,
		                        message: 'Password must contain at least one letter, at least one number, and be longer than six charaters.'
		                    }*/
	                    }
	                },
	                confirmpassword: {
	                    validators: {
	                        notEmpty: {
	                            message: 'The confirm password is required and cannot be empty'
	                        },
	                        identical: {
	                            field: 'password',
	                            message: 'The password and its confirm must be the same'
	                        }
	                    }
	                }
		        }
		    });

	    });
    </script>
